@page
@model IndexModel
@{
    ViewData["Title"] = "Мої Бронювання";
}

<div class="container mx-auto p-4 sm:p-6 lg:p-8 min-h-screen">
    <h1 class="text-3xl font-bold text-gray-700 mb-8">Your reservations :</h1>

    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-4" role="alert">
            <p class="font-bold">Success!</p>
            <p>@Model.Message</p>
        </div>
    }
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {}

    @if (Model.Bookings.Any())
    {
     <div class="space-y-6">
       @foreach (var booking in Model.Bookings.OrderByDescending(b => b.CheckIn))
         {
         <div 
         class="bg-white shadow-lg rounded-xl overflow-hidden p-6 border border-gray-100 
         @(booking.Status == Domain.BookingStatus.Past ? "opacity-70" : "")">
                    
            <div class="flex justify-between items-start mb-4 border-b pb-4">
                <div>
                    <p class="text-sm font-semibold text-pink-600 uppercase tracking-wider">@booking.HotelName, @booking.HotelCity</p>
                    <h2 class="text-2xl font-bold text-gray-700 mt-1">Room @booking.RoomNumber</h2>
                </div>
                        
                @{
                    var statusClass = booking.Status == Domain.BookingStatus.Active
                    ? "bg-green-100 text-green-800" : "bg-gray-100 text-gray-800";
                }
                <span class="px-3 py-1 text-sm font-medium rounded-full @statusClass">
                    @booking.Status
                </span>
                    </div>

                <div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-ml text-gray-700">
                    <div>
                        <p class="font-semibold">Period:</p>
                        <p>@booking.CheckIn.ToShortDateString() &mdash; @booking.CheckOut.ToShortDateString()</p>
                        </div>
                        <div>
                            <p class="font-semibold">Capacity:</p>
                            <p>@booking.Capacity</p>
                        </div>
                        <div>
                            <p class="font-semibold">Total price:</p>
                            <p class="text-lg font-bold text-pink-700">@booking.TotalPrice.ToString("C")</p>
                        </div>
                    </div>
                    
                    @if (booking.Status == Domain.BookingStatus.Active)
                    {
                        <div class="mt-6 pt-4 border-t flex justify-end">
                            <form method="post" onsubmit="return confirm('Are you sure you want to cancel your reservation?');">
                            <input type="hidden" name="bookingId" value="@booking.Id" />
                            <button type="submit" class="bg-red-500 font-semibold text-white py-2 px-4 rounded-lg text-ml">
                               Cancel booking
                            </button>
                            </form>
                        </div>
                    }
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center p-10 bg-white rounded-lg shadow-inner border border-gray-100">
            <p class="text-xl text-gray-500 font-medium">You have no active or past reservations.</p>
            <a asp-page="/Hotels/Index" class="mt-4 inline-block text-pink-600 hover:text-pink-800 font-semibold">
                Start searching
            </a>
        </div>
    }
</div>