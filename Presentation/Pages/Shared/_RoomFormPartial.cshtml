@model Application.DTOs.CreateRoomDto


<div class="bg-white p-6 rounded-xl shadow-lg border border-pink-100">
    <h2 class="text-3xl font-semibold text-pink-600 mb-4">Room details</h2>

    <div class="mb-4">
        <label asp-for="RoomNumber" class="block text-xl font-medium text-gray-700">№ Room</label>
        <input asp-for="RoomNumber" type="text" class="mt-1 block w-full border border-pink-300 rounded-md shadow-sm p-3">
        <span asp-validation-for="RoomNumber" class="text-red-500 text-sm mt-1"></span>
    </div>

    <div class="mb-4">
        <label asp-for="Capacity" class="block text-xl font-medium text-gray-700">Capacity</label>
        <input asp-for="Capacity" type="number" min="1" class="mt-1 block w-full border border-pink-300 rounded-md shadow-sm p-3">
        <span asp-validation-for="Capacity" class="text-red-500 text-sm mt-1"></span>
    </div>

    <div class="mb-4">
        <label asp-for="PricePerNight" class="block text-xl font-medium text-gray-700">Price per night (₴)</label>
        <input asp-for="PricePerNight" type="number" step="1" min="0" class="mt-1 block w-full border border-pink-300 rounded-md shadow-sm p-3">
        <span asp-validation-for="PricePerNight" class="text-red-500 text-sm mt-1"></span>
    </div>

</div>