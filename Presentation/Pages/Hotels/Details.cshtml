@page
@model DetailsModel
@{
    ViewData["Title"] = $"Деталі номера: {Model.RoomDetails.RoomNumber}";
}

<div class="container mx-auto p-4 sm:p-6 lg:p-8 min-h-screen">
    
    <a asp-page="/Hotels/Index" 
    class="text-pink-600 text-ml font-medium flex items-center mb-6">
        &larr; Back to search results
    </a>

    <h1 
    class="text-4xl font-bold text-gray-700 mb-2">
    Room @Model.RoomDetails.RoomNumber</h1>
    <p class="text-xl text-gray-600 mb-8">
    @Model.RoomDetails.Name (@Model.RoomDetails.Address, @Model.RoomDetails.City)</p>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        
        <div class="lg:col-span-2 space-y-6">
            <div class="bg-white p-6 rounded-xl shadow-lg border border-gray-100">
                <h2 class="text-2xl font-bold text-gray-800 mb-4">Characteristics</h2>
                <p class="mb-4">@Model.RoomDetails.Description</p>

                <ul class="space-y-2 text-gray-700">
                    <li><strong class="font-semibold">Price per night :</strong> @Model.RoomDetails.PricePerNight.ToString("C")</li>
                    <li><strong class="font-semibold">Capacity :</strong> @Model.RoomDetails.Capacity person</li>
                </ul>
            </div>
            </div>

        <div class="lg:col-span-1">
            <div class="bg-white p-6 rounded-xl shadow-2xl border-t-4 border-pink-600 sticky top-24">
                
                <div asp-validation-summary="ModelOnly" class="text-red-600 font-medium pb-4"></div>
                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="mb-4 p-3 text-sm text-red-700 bg-red-100 rounded-lg">@Model.ErrorMessage</div>
                }

                <div class="border-t pt-4 mt-4">
                    <div class="flex justify-between font-semibold text-lg text-gray-800">
                        <span>Total price (@Model.RoomDetails.NumberOfNights nights):</span>
                        <span class="text-pink-600">@Model.RoomDetails.TotalPrice.ToString("C")</span>
                    </div>
                    <p class="text-sm text-gray-500 mt-1">Dates: @Model.CheckInDate.ToShortDateString() &mdash; @Model.CheckOutDate.ToShortDateString()</p>
                </div>
                
               
                    @if (!User.Identity!.IsAuthenticated)
                    {
                        <h3 class="text-xl font-bold text-gray-700 mb-4">Wait</h3>
                        <p class="text-ml text-bold text-center text-gray-500 mt-3">
                            <a asp-page="/Account/Login" class="text-pink-600 hover:underline">Login</a>, for booking
                        </p>
                    }
                    else{
                    <h3 class="text-xl font-bold text-gray-700 mb-4">Your booking</h3>
                    <form method="post">
                    <input type="hidden" asp-for="RoomId" />
                    <input type="hidden" asp-for="CheckInDate" />
                    <input type="hidden" asp-for="CheckOutDate" />
                    
                    <button type="submit" 
                            class="w-full mt-6 bg-green-600 text-white py-3 rounded-lg hover:bg-green-700 font-bold transition duration-150">
                        Book now
                    </button>
                     </form>
                    }
               
            </div>
        </div>
    </div>
</div>