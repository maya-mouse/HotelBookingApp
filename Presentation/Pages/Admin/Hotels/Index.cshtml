@page
@model IndexModel
@{
    ViewData["Title"] = "Керування Готелями";
}

<div class="container mx-auto p-4 sm:p-6 lg:p-8 min-h-screen">
    <h1 class="text-3xl font-bold text-gray-700 mb-6">Hotels Management</h1>

    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-4" role="alert">
            <p class="font-bold">Success</p>
            <p>@Model.Message</p>
        </div>
    }
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-4" role="alert">
            <p class="font-bold">Error</p>
            <p>@Model.ErrorMessage</p>
        </div>
    }

    <div class="flex justify-between items-center mb-6">
        <a asp-page="Create" class="bg-pink-600 text-white py-2 px-4 rounded-lg font-semibold shadow-md">
            + Add new hotel
        </a>
    </div>

    <div class="bg-white shadow-xl rounded-xl overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xl font-medium text-gray-600 uppercase tracking-wider">ID</th>
                    <th class="px-6 py-3 text-left text-xl font-medium text-gray-600 uppercase tracking-wider">Name</th>
                    <th class="px-6 py-3 text-left text-xl font-medium text-gray-600 uppercase tracking-wider">City</th>
                    <th class="px-6 py-3 text-left text-xl font-medium text-gray-600 uppercase tracking-wider">Address</th>
                    <th class="px-6 py-3 text-left text-xl font-medium text-gray-600 uppercase tracking-wider">Rooms</th>
                    <th class="px-6 py-3 text-right text-xl font-medium text-gray-600 uppercase tracking-wider">Actions</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @if (Model.Hotels != null)
                {
                    @foreach (var hotel in Model.Hotels)
                    {
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap text-xl text-gray-700">@hotel.Id</td>
                            <td class="px-6 py-4 whitespace-nowrap text-xl font-medium text-gray-700">@hotel.Name</td>
                            <td class="px-6 py-4 whitespace-nowrap text-xl text-gray-600">@hotel.City</td>
                            <td class="px-6 py-4 whitespace-nowrap text-xl text-gray-600">@hotel.Address</td>
                            <td class="px-6 py-4 whitespace-nowrap text-xl text-gray-00">
                                @(hotel.Rooms != null ? hotel.Rooms.Count : 0)
                                <a asp-page="/Admin/Rooms/Index" asp-route-hotelId="@hotel.Id" class="text-sm text-indigo-600 ml-2">(Manage)</a>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-right text-ml font-medium space-x-2">
                                <a asp-page="Edit" asp-route-id="@hotel.Id" class="text-yellow-600">Edit</a>
                                
                                <form method="post" asp-page-handler="Delete" onsubmit="return confirm('Are you sure you want to delete a hotel @hotel.Name?');" class="inline">
                                    <input type="hidden" name="id" value="@hotel.Id" />
                                    <button type="submit" class="text-red-600 hover:text-red-900">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="px-6 py-4 text-center text-sm text-gray-500">No hotels were found</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>