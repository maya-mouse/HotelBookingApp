@page "{id:int?}"
@model EditModel
@{
    ViewData["Title"] = $"Редагування Готелю: {Model.HotelData?.Name}";
}

<div class="container mx-auto p-4 sm:p-6 lg:p-8 min-h-screen">
    <h1 class="text-3xl font-bold text-gray-900 mb-6">Edit hotel ID: @Model.Id</h1>

    <a asp-page="Index" class="text-pink-600 hover:text-pink-800 flex items-center mb-6">
        &larr; Back to list
    </a>

    <form method="post">
        <input type="hidden" asp-for="Id" />
        
        <div asp-validation-summary="ModelOnly" class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-4"></div>
        
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-4" role="alert">
                <p>@Model.ErrorMessage</p>
            </div>
        }

        <div class="space-y-6">
            <partial name="_HotelFormPartial" model="Model.HotelData" />
        </div>

        <button type="submit" class="mt-6 bg-pink-600 text-white py-2 px-4 rounded-lg font-semibold text-xl">
            Save changes
        </button>
    </form>
</div>