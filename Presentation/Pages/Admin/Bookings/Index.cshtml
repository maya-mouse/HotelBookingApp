@page
@model IndexModel
@{
    ViewData["Title"] = "Усі Бронювання";
}

<div class="container mx-auto p-4 sm:p-6 lg:p-8 min-h-screen">
    <h1 class="text-3xl font-bold text-gray-700 mb-6">All bookings</h1>

    <div class="bg-white shadow-xl rounded-xl overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xl font-medium text-gray-600 uppercase tracking-wider">ID Booking</th>
                    <th class="px-6 py-3 text-left text-xl font-medium text-gray-600 uppercase tracking-wider">Hotel</th>
                    <th class="px-6 py-3 text-left text-xl font-medium text-gray-600 uppercase tracking-wider">Room</th>
                    <th class="px-6 py-3 text-left text-xl font-medium text-gray-600 uppercase tracking-wider">Period</th>
                    <th class="px-6 py-3 text-left text-xl font-medium text-gray-600 uppercase tracking-wider">Price / Status</th>
                    <th class="px-6 py-3 text-left text-xl font-medium text-gray-600 uppercase tracking-wider">User (ID)</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @if (Model.AllBookings.Any())
                {
                    @foreach (var booking in Model.AllBookings.OrderByDescending(b => b.CheckIn))
                    {
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap text-xl text-gray-700">@booking.Id</td>
                            <td class="px-6 py-4 whitespace-nowrap text-xl text-gray-700">@booking.HotelName (@booking.HotelCity)</td>
                            <td class="px-6 py-4 whitespace-nowrap text-xl text-gray-700">@booking.RoomNumber</td>
                            <td class="px-6 py-4 whitespace-nowrap text-xl text-gray-700">
                                @booking.CheckIn.ToShortDateString() &mdash; @booking.CheckOut.ToShortDateString()
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-xl text-gray-700">
                                <span class="block font-bold">@booking.TotalPrice.ToString("C")</span>
                                <span class="text-xs text-@(booking.Status == Domain.BookingStatus.Active ? "green" : "gray")-500">@booking.Status</span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-xl text-gray-700">@booking.UserId</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="px-6 py-4 text-center text-sm text-gray-500">Бронювань ще немає.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>