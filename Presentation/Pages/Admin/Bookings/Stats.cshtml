@page
@model StatsModel
@{
    ViewData["Title"] = "Статистика Бронювань";
}

<div class="container mx-auto p-4 sm:p-6 lg:p-8 min-h-screen">
    <h1 class="text-3xl font-bold text-gray-900 mb-6">Booking statistics</h1>

    <div class="bg-white shadow-lg rounded-xl p-6 mb-10 border border-gray-200">
        <form method="get" class="grid grid-cols-1 md:grid-cols-4 gap-4 items-end">
            <div>
                <label asp-for="StartDate" class="block text-sm font-medium text-gray-700">Start:</label>
                <input type="date" asp-for="StartDate" class="mt-1 block w-full rounded-md border-gray-300 p-3 border">
            </div>
            <div>
                <label asp-for="EndDate" class="block text-sm font-medium text-gray-700">End:</label>
                <input type="date" asp-for="EndDate" class="mt-1 block w-full rounded-md border-gray-300 p-3 border">
            </div>
            <div class="md:col-span-2">
                <button method="get" type="submit" class="w-full bg-pink-600 text-white py-3 px-4 rounded-md hover:bg-pink-700 font-semibold">
                    Show stats
                </button>
            </div>
        </form>
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            }
    </div>

    @if (Model.Statistics.Any())
    {
        <h2 class="text-xl font-semibold text-gray-800 mb-4">Results (@Model.StartDate.ToShortDateString() &mdash; @Model.EndDate.ToShortDateString()):</h2>
        
        <div class="bg-white shadow-xl rounded-xl overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">All Bookings count</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Cancelled Bookings count</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Total revenue</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @foreach (var stat in Model.Statistics)
                    {
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">@stat.Date.ToShortDateString()</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@stat.BookedCount </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-red-500 font-medium">@stat.CancelledCount</td>
                            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-bold text-green-700">@stat.TotalRevenue.ToString("C")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="mt-8 p-6 bg-white rounded-xl shadow-lg">
    <h3 class="text-xl font-semibold mb-3">Histogram: Reservations and Cancellations</h3>
    
    <div class="flex items-end h-64 border-b border-l pt-2 space-x-2 overflow-x-auto">
        @{

            var maxBooked = Model.Statistics.Max(s => s.BookedCount);
            var maxCancelled = Model.Statistics.Max(s => s.CancelledCount);
            var overallMax = Math.Max(maxBooked, maxCancelled);
            var scale = overallMax > 0 ? 100.0 / overallMax : 0;
        }

        @foreach (var stat in Model.Statistics)
        {
            // Висота стовпців (масштабується до 90% висоти контейнера)
            var bookedHeight = (int)(stat.BookedCount * scale * 0.85); 
            var cancelledHeight = (int)(stat.CancelledCount * scale * 0.85);

            <div class="flex flex-col justify-end items-center relative" style="min-width: 50px;">
                
                <div class="flex items-end h-full space-x-1">
                    
                    <div style="height: @(bookedHeight)%" 
                         class="w-5 bg-indigo-500 hover:bg-indigo-600 relative transition duration-150 rounded-t-sm" 
                         title="@stat.Date.ToShortDateString(): Total @stat.BookedCount">
                        <span class="absolute -top-5 text-xs w-full text-center font-bold">@stat.BookedCount</span>
                    </div>

                    <div style="height: @(cancelledHeight)%" 
                         class="w-5 bg-red-400 hover:bg-red-500 relative transition duration-150 rounded-t-sm" 
                         title="@stat.Date.ToShortDateString(): Cancelled @stat.CancelledCount">
                        <span class="absolute -top-5 text-xs w-full text-center text-red-700">@stat.CancelledCount</span>
                    </div>
                </div>

                <div class="absolute -bottom-6 text-xs text-gray-600">
                    @stat.Date.Day
                </div>
            </div>
        }
    </div>
    
    <div class="mt-8 pt-4 flex space-x-6 justify-center">
        <div class="flex items-center space-x-1">
            <div class="w-3 h-3 bg-indigo-500 rounded-full"></div>
            <span class="text-sm text-gray-700">All Bookings</span>
        </div>
        <div class="flex items-center space-x-1">
            <div class="w-3 h-3 bg-red-400 rounded-full"></div>
            <span class="text-sm text-gray-700">Cancelled Bookings</span>
        </div>
    </div>
</div>
    }
    else
    {
        <div class="text-center p-10 bg-white rounded-lg shadow-inner border border-gray-100">
            <p class="text-xl text-gray-500">No data to display for the specified period</p>
        </div>
    }
</div>