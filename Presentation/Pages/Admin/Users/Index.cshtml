@page
@model IndexModel
@{
    ViewData["Title"] = "Управління Користувачами";
}

<div class="container mx-auto p-4 sm:p-6 lg:p-8 min-h-screen">
    <h1 class="text-3xl font-bold text-gray-700 mb-6">User Management</h1>

    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-4" role="alert">
            <p>@Model.Message</p>
        </div>
    }
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        }

    <div class="flex justify-between items-center mb-6">
        <a asp-page="Create" class="bg-pink-600 text-white py-2 px-4 rounded-lg font-semibold">
            + Add User
        </a>
    </div>

    <div class="bg-white shadow-xl rounded-xl overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xl font-medium text-gray-600 uppercase tracking-wider">ID</th>
                    <th class="px-6 py-3 text-left text-xl font-medium text-gray-600 uppercase tracking-wider">Email</th>
                    <th class="px-6 py-3 text-left text-xl font-medium text-gray-600 uppercase tracking-wider">Role</th>

                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @if (Model.Users.Any())
                {
                    @foreach (var user in Model.Users)
                    {
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap text-xl text-gray-700">@user.Id</td>
                            <td class="px-6 py-4 whitespace-nowrap text-xl text-gray-700">@user.Email</td>
                            <td class="px-6 py-4 whitespace-nowrap text-xl text-gray-700">
                                <span class="px-2 inline-flex text-sm leading-8 font-semibold rounded-full 
                                    @(user.Role == "Administrator" ? "bg-red-100 text-red-800" : "bg-green-100 text-green-800")">
                                    @user.Role
                                </span>
                            </td>
                        
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="px-6 py-4 text-center text-sm text-gray-500">Користувачів не знайдено.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>