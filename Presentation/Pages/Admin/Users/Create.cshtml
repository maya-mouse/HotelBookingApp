@page
@model CreateModel
@{
    ViewData["Title"] = "Створити Користувача";
}

<div class="container mx-auto p-4 sm:p-6 lg:p-8 min-h-screen">
    <h1 class="text-3xl font-bold text-gray-900 mb-6">Create new user</h1>

    <a asp-page="Index" class="text-pink-600 hover:text-pink-800 flex items-center mb-6">
        &larr; Back to user management
    </a>

    <div class="max-w-md w-full space-y-8 bg-white p-10 rounded-xl shadow-lg border border-gray-200">
        <form method="post" class="space-y-6">
            <div asp-validation-summary="All" class="text-red-600 font-medium pb-4"></div>
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-4" role="alert">
                    <p>@Model.ErrorMessage</p>
                </div>
            }

            <div class="rounded-md shadow-sm space-y-4">
                <div>
                    <label asp-for="RegisterData.Email" class="block text-sm font-medium text-gray-700">Email</label>
                    <input asp-for="RegisterData.Email" type="email" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-3">
                    <span asp-validation-for="RegisterData.Email" class="text-red-500 text-sm mt-1"></span>
                </div>
                
                <div>
                    <label asp-for="RegisterData.Password" class="block text-sm font-medium text-gray-700">Password</label>
                    <input asp-for="RegisterData.Password" type="password" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-3">
                    <span asp-validation-for="RegisterData.Password" class="text-red-500 text-sm mt-1"></span>
                </div>

                <div>
                    <label asp-for="RegisterData.ConfirmPassword" class="block text-sm font-medium text-gray-700">Confirm Password</label>
                    <input asp-for="RegisterData.ConfirmPassword" type="password" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-3">
                    <span asp-validation-for="RegisterData.ConfirmPassword" class="text-red-500 text-sm mt-1"></span>
                </div>
                
                <div>
                    <label asp-for="RegisterData.RoleName" class="block text-sm font-medium text-gray-700">Role</label>
                    <select asp-for="RegisterData.RoleName" asp-items="Model.RoleOptions" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-3">
                    </select>
                    <span asp-validation-for="RegisterData.RoleName" class="text-red-500 text-sm mt-1"></span>
                </div>
            </div>

            <div>
                <button type="submit" class="w-full bg-pink-600 text-white py-2 px-4 rounded-md font-semibold">
                    Create User
                </button>
            </div>
        </form>
    </div>
</div>