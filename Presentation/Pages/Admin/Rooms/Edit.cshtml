@page "{roomId:int?}"
@model EditModel
@{
    ViewData["Title"] = "Редагування Номера";
}

<div class="container mx-auto p-4 sm:p-6 lg:p-8 min-h-screen">
    <a asp-page="Index" asp-route-hotelId="@Model.HotelId" class="text-pink-600 hover:text-pink-800 flex items-center mb-6">
        &larr; Back to the hotel rooms @Model.HotelName
    </a>

    <h1 class="text-3xl font-bold text-gray-900 mb-6">Edit room: @Model.RoomData.RoomNumber</h1>

    <form method="post">
        <input type="hidden" asp-for="RoomId" />
        <input type="hidden" asp-for="HotelId" />
        
        <div asp-validation-summary="ModelOnly" class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-4"></div>
        
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
        }

        <div class="space-y-6">
            <partial name="_RoomFormPartial" model="Model.RoomData" />
        </div>

        <button type="submit" class="mt-6 bg-pink-600 text-white py-2 px-4 rounded-lg hover:bg-pink-700 font-semibold text-xl">
            Save changes
        </button>
    </form>
</div>