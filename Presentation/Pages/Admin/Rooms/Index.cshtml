@page
@model IndexModel
@{
    ViewData["Title"] = $"Номери: @Model.HotelName";
}

<div class="container mx-auto p-4 sm:p-6 lg:p-8 min-h-screen">
    <a asp-page="/Admin/Hotels/Index" class="text-pink-600 font-medium flex items-center mb-6">
        &larr; Back to hotels list
    </a>
    
    <h1 class="text-3xl font-bold text-gray-700 mb-2">Rooms Management</h1>
    <h2 class="text-2xl text-gray-700 mb-6">Hotel : @Model.HotelName (ID: @Model.HotelId)</h2>

    @if (!string.IsNullOrEmpty(Model.Message))
    {
        }
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        }

    <div class="flex justify-between items-center mb-6">
        <a asp-page="Create" 
        asp-route-hotelId="@Model.HotelId"class="bg-pink-600 text-white py-2 px-4 rounded-lg font-semibold shadow-md">
            + Add new room
        </a>
    </div>

    <div class="bg-white shadow-xl rounded-xl overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xl font-medium text-gray-600 uppercase tracking-wider">№ Rooms</th>
                    <th class="px-6 py-3 text-left text-xl font-medium text-gray-600 uppercase tracking-wider">Capacity</th>
                    <th class="px-6 py-3 text-left text-xl font-medium text-gray-600 uppercase tracking-wider">Price per night</th>
                    <th class="px-6 py-3 text-left text-xl font-medium text-gray-600 uppercase tracking-wider">Actions</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @if (Model.Rooms.Any())
                {
                    @foreach (var room in Model.Rooms)
                    {
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap text-xl text-gray-700">@room.RoomNumber</td>
                            <td class="px-6 py-4 whitespace-nowrap text-xl text-gray-700">@room.Capacity</td>
                            <td class="px-6 py-4 whitespace-nowrap text-xl text-gray-700">@room.PricePerNight.ToString("C")</td>
                            <td class="px-6 py-4 whitespace-nowrap  text-sm font-medium space-x-2">
                                <a asp-page="Edit" asp-route-roomId="@room.Id" class="text-yellow-600">Edit</a>
                                
                                <form method="post" asp-page-handler="Delete" onsubmit="return confirm('Are you sure you want to delete this number?');" class="inline">
                                    <input type="hidden" name="roomId" value="@room.Id" />
                                    <input type="hidden" name="HotelId" value="@Model.HotelId" />
                                    <button type="submit" class="text-red-600">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="px-6 py-4 text-center text-sm text-gray-500">No rooms found</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>